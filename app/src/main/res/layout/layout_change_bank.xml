<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_black"
            android:background="?attr/selectableItemBackground"
            android:padding="16dp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="#870000ff"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@id/iv_back"/>

        <TextView
            android:id="@+id/tv_music_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:text="主题皮肤"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:layout_toEndOf="@id/iv_back"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7f000000"
        android:layout_below="@id/rl_toolbar"/>

    <ScrollView
        android:layout_below="@id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="270dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/pic_change_bg1"
                android:id="@+id/back1"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="270dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/pic_change_bg2"
                android:id="@+id/back2"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="270dp"
                android:layout_alignStart="@+id/back1"
                android:layout_below="@+id/back1"
                android:layout_marginTop="13dp"
                android:src="@drawable/pic_change_bg3"
                android:id="@+id/back3"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="270dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp"
                android:layout_below="@id/back2"
                android:layout_marginTop="5dp"
                android:src="@drawable/pic_main_bg"
                android:id="@+id/back4"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>