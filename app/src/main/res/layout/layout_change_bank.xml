<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="270dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/pic_change_bg1"
        android:id="@+id/back1"></ImageView>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="270dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/pic_change_bg2"
        android:id="@+id/back2"></ImageView>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="270dp"
        android:layout_alignStart="@+id/back1"
        android:layout_below="@+id/back1"
        android:layout_marginTop="13dp"
        android:src="@drawable/pic_change_bg3"
        android:id="@+id/back3"></ImageView>

</RelativeLayout>