<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/item_play_status"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:padding="10dp"
        android:src="@drawable/ic_classify_music_state"/>

    <ImageView
        android:id="@+id/item_is_love"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:src="@mipmap/ic_not_love"
        android:visibility="gone"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/item_music_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textColor="@color/white_item"
        android:layout_marginStart="5dp"
        android:background="?android:selectableItemBackground"
        android:ellipsize="marquee"
        android:layout_toStartOf="@id/item_is_love"
        android:layout_toEndOf="@id/item_play_status"
        android:singleLine="true" />

</RelativeLayout>