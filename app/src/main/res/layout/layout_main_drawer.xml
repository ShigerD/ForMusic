<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="290dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:id="@+id/ll_drawer">

    <RelativeLayout
        android:layout_width="316dp"
        android:layout_height="176dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ciecle_userHead"
            android:src="@drawable/ic_lanuch_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"/>
            <!--android:src="@drawable/profile"-->
            <!--app:civ_border_width="2dp"-->
            <!--app:civ_border_color="#FF000000"-->

            <LinearLayout
                android:id="@+id/info_user_head"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:layout_toRightOf="@id/ciecle_userHead"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/tv_nickName"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/app_name"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_userSign"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:text="宁玉文的侧划菜单真牛皮！"/>

            </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv0"
            android:layout_width="56dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_change_skin"
            android:padding="14dp"/>

        <TextView
            android:id="@+id/tv_change_kin"
            android:layout_toRightOf="@id/iv0"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="更换皮肤"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="56dp"
            android:layout_height="50dp"
            android:layout_below="@id/iv0"
            android:src="@drawable/ic_access_time_white_48dp"
            android:padding="14dp"/>

        <TextView
            android:id="@+id/tv_close_app_time"
            android:layout_toRightOf="@id/iv1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:layout_below="@id/tv_change_kin"
            android:text="定时关闭"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="56dp"
            android:layout_height="50dp"
            android:layout_below="@id/iv1"
            android:src="@drawable/ic_close_app"
            android:padding="14dp"/>

        <TextView
            android:id="@+id/tv_close_app"
            android:layout_toRightOf="@id/iv2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:text="退出应用"
            android:layout_below="@id/tv_close_app_time"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>

    <!--<ListView-->
        <!--android:id="@+id/ls_drawer"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->

</LinearLayout>