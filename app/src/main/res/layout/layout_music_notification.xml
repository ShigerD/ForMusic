<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_music_pic"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="5dp"
        android:src="@mipmap/ic_play_album" />

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ic_notification_play_music"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_notification_pause_music" />

        <ImageView
            android:id="@+id/ic_notification_next_music"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@mipmap/ic_notification_next_music" />

        <ImageView
            android:id="@+id/ic_notification_close_music"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_notification_close"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toEndOf="@id/iv_music_pic"
        android:layout_toStartOf="@id/ll_item"
        android:gravity="left|center_vertical"
        android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/music_name"
            android:text="音乐标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>