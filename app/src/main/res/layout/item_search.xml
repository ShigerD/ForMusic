<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_item_search_music"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/search_music_name"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/white_text"
        android:layout_marginLeft="10dp"
        android:text="江南"/>
    <View
        android:background="#000000"
        android:layout_width="5dp"
        android:layout_height="1px"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/search_music_name" />

    <TextView
        android:id="@+id/search_music_player"
        android:text="林俊杰"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:ellipsize="marquee"
        android:layout_toRightOf="@id/search_music_name"
        android:layout_marginLeft="5dp"
        android:textColor="@color/white_text"

        android:singleLine="true" />

    <ImageView
        android:id="@+id/search_islove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:visibility="gone"
        android:background="@mipmap/ic_not_love" />

</RelativeLayout>